<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="description" content="">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<title>Final Project - Furniture Ecommerce | Home</title>

	<link rel="icon" href="img/core-img/favicon.ico">

	<link rel="stylesheet" href="css/core-style.css">
	<link rel="stylesheet" href="style.css">

</head>

<body>
	<%- include('../partials/search'); %>

		<div class="main-content-wrapper d-flex clearfix">

			<%- include('../partials/headerTemp'); %>

				<div class="products-catagories-area clearfix">
					<div class="amado-pro-catagory clearfix" id="proInHome">
						<% pro.forEach(pro=> { %>
							<div class="single-products-catagory clearfix">
								<a href="detail?id=<%=pro.ID%>">
									<img src="<%=pro.Image%>" alt="">
									<div class="hover-content">
										<div class="line"></div>
										<p>From $<%=pro.Price%></p>
										<h4><%=pro.Name%></h4>
									</div>
								</a>
							</div>
							<% }) %>	
						
					</div>
				</div>
		</div>
		<%- include('../partials/footerTemp'); %>

			<script src="js/jquery/jquery-2.2.4.min.js"></script>
			<script src="js/popper.min.js"></script>
			<script src="js/bootstrap.min.js"></script>
			<script src="js/plugins.js"></script>
			<script src="js/active.js"></script>
			<script>
                $(document).ready(function () {
                    $('nav.amado-nav li.mHome').addClass('active');
                });
            </script>

</body>

</html>